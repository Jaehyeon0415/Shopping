extends ../layout

block content

   .row.mx-auto.col-lg-4.col-md-8.col-sm-12
      .col
         h2.text-center.mb-4 Signup
         form
            .form-group
               label(for="exampleInputEmail1") Email address
               input.form-control(type="email" name="email" placeholder="email")
            |
            .form-group
               label(for="exampleInputID1") ID
               input.form-control(type="id" name="id" placeholder="id")
            |
            .form-group
               label(for="exampleInputPassword1") Password
               input.form-control(type="password" name="password" placeholder="password")
            |
            .form-group
               label(for="exampleInputPassword1") Confirm Password
               input.form-control(type="password" name="confirmpassword" placeholder="confirm password")
            |
            button.btn.btn-primary.mt-2(type="submit") Submit